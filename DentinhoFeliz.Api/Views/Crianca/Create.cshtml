@model DentinhoFeliz.Application.ViewModels.CriancaViewModel

@{
    ViewData["Title"] = "Adicionar Nova Criança";
}

<h2>Adicionar Nova Criança</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Idade" class="control-label"></label>
        <input asp-for="Idade" class="form-control" type="number" />
        <span asp-validation-for="Idade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmailResponsavel" class="control-label"></label>
        <input asp-for="EmailResponsavel" class="form-control" type="email" />
        <span asp-validation-for="EmailResponsavel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}